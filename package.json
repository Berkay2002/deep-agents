{
  "name": "deep-agents-monorepo",
  "private": true,
  "workspaces": [
    "apps/agent",
    "apps/agent-chat-ui"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run build --workspace=apps/agent && concurrently \"npm run dev --workspace=apps/agent\" \"npm run dev --workspace=apps/agent-chat-ui\"",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^2.0.1",
    "@langchain/mcp-adapters": "^0.6.0",
    "@modelcontextprotocol/sdk": "^1.18.2",
    "react-syntax-highlighter": "^15.6.6"
  }
}
